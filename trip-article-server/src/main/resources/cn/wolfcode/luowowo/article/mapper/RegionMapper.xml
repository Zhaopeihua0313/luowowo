<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.wolfcode.luowowo.article.mapper.RegionMapper">

    <!--基本映射-->
    <resultMap id="BaseResultMap" type="cn.wolfcode.luowowo.article.domain.Region">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="sn" property="sn"/>
        <result column="ref" property="ref"/>
        <result column="info" property="info"/>
        <result column="hot" property="hot"/>
        <result column="state" property="state"/>
    </resultMap>

    <!--通过主键删除区域-->
    <delete id="deleteByPrimaryKey">
        DELETE FROM region
        WHERE id = #{id}
    </delete>

    <!--增加一区域-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO region (name, sn, ref, info, hot, state)
        VALUES (#{name}, #{sn}, #{ref}, #{info}, #{hot}, #{state})
    </insert>
    <update id="updateByPrimaryKey">
        UPDATE region
        SET name  = #{name},
            sn    = #{sn},
            ref   = #{ref},
            info  = #{info},
            hot   = #{hot},
            state = #{state}
        WHERE id = #{id}
    </update>

    <!--通过主键查询一区域-->
    <select id="selectByPrimaryKey" resultMap="BaseResultMap">
        SELECT
            id,
            name,
            sn,
            ref,
            info,
            hot,
            state
        FROM region
        WHERE id = #{id}
    </select>

    <!--查询所有区域-->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT
            id,
            name,
            sn,
            ref,
            info,
            hot,
            state
        FROM region
    </select>

    <!--高级查询-->
    <select id="selectForList" resultMap="BaseResultMap">
        SELECT
            id,
            name,
            sn,
            ref,
            info,
            hot,
            state
        FROM region
    </select>

    <!--获取 热门的启用的区域-->
    <select id="selectListByHot" resultMap="BaseResultMap">
        SELECT
            id,
            name,
            sn,
            ref,
            info,
            hot,
            state
        FROM region
        WHERE hot = 1 AND state = 1
    </select>

</mapper>