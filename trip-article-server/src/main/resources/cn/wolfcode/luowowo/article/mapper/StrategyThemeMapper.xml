<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.wolfcode.luowowo.article.mapper.StrategyThemeMapper">

    <!--基本映射-->
    <resultMap id="BaseResultMap" type="cn.wolfcode.luowowo.article.domain.StrategyTheme">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="state" property="state"/>
    </resultMap>

    <!--通过主键删除一攻略主题-->
    <delete id="deleteByPrimaryKey">
        DELETE FROM strategy_theme
        WHERE id = #{id}
    </delete>

    <!--新增一攻略主题-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO strategy_theme (name, state)
        VALUES (#{name}, #{state})
    </insert>

    <!--通过主键修改一攻略主题-->
    <update id="updateByPrimaryKey">
        UPDATE strategy_theme
        SET name  = #{name},
            state = #{state}
        WHERE id = #{id}
    </update>

    <!--通过主键查询一攻略主题-->
    <select id="selectByPrimaryKey" resultMap="BaseResultMap">
        SELECT
            id,
            name,
            state
        FROM strategy_theme
        WHERE id = #{id}
    </select>

    <!--查询所有的攻略主题-->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT
            id,
            name,
            state
        FROM strategy_theme
    </select>

    <!--高级查询-->
    <select id="selectForList" resultMap="BaseResultMap">
        SELECT
            id,
            name,
            state
        FROM strategy_theme
    </select>


</mapper>